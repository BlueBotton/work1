<view class="page">
    <view wx:for="{{groupList}}" wx:for-item="group" wx:key="groupId">
        <navigator url="/pages/form/index?groupId={{group.groupId}}" class="card">
            <view class="txt">
                <view class="title">组号：</view>
                <view class="info">{{group.groupId}}</view>
            </view>
           
            <view class="txt">
                <view class="title">组长：</view>
                <view class="info">{{group.leader}}</view>
            </view>

            <view class="txt">
                <view class="title">选题：</view>
                <view class="info">{{group.code_a}}</view>
            </view>

            <view class="txt">
                <view class="title">组员1：</view>
                <view class="info">{{group.code_b}}</view>
            </view>

            <view class="txt">
                <view class="title">组员2：</view>
                <view class="info">{{group.code_c}}</view>
            </view>

            <view class="txt">
                <view class="title">介绍：</view>
                <view class="info">{{group.info}}</view>
            </view>
        </navigator>
    </view>

    <view>
        <view class="toast">已无更多小组</view>
        <navigator open-type="redirect" url="/pages/form/index" class="join">点这里创建新的小组</navigator>
    </view>
</view>